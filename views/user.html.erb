<% @title = "#{ @user.name }#{ " (#{ @user.profile.name.strip_tags })" if @user.profile.has? :name }" %>
<div id="user" class="unit">
  <% if @user.profile.has? :description %>
    <p class="description"><%= @user.profile.description.strip_tags %></p>
  <% end %>

  <% if @user.profile.has? :url %>
    <p class="url"><a href="<%= @user.profile.url %>" target="_blank"><%= @user.profile.url.strip_tags %></a></p>
  <% end %>

  <% if @user.profile.has? :location %>
    <p class="location"><%= @user.profile.location.strip_tags %></p>
  <% end %>
</div>

