<% @title = "#{ @user.name }#{ " (#{ @user.profile.name.strip_tags })" if @user.profile.has? :name }" %>
<div id="user" class="unit">
  <% if @user.profile.has? :description %>
    <p class="description"><%= @user.profile.description.strip_tags %></p>
  <% end %>

  <% if @user.profile.has? :url %>
    <p class="url"><a href="<%= @user.profile.url %>" target="_blank"><%= @user.profile.url.strip_tags %></a></p>
  <% end %>

  <% if @user.profile.has? :location %>
    <p class="location"><%= @user.profile.location.strip_tags %></p>
  <% end %>
</div>

<% if @documents.size > 0 %>
  <div class="unit">
    <h3>
      Latest documents by <%= @user.name %>
    </h3>

    <ul id="documents">
      <% @documents.each do |doc| %>
        <li>
          <a href="<%= doc.path %>" target="_blank">
            <span class="meta">
              <em class="user"><%= doc.user.try(:name) || doc.user_name %></em>
              <% if doc.partial_path.present? %><small class="partial-path"><%= doc.partial_path.split('/').map{ |part| "<span>#{ part }</span>" }.join ' ' %></small><% end %>
            </span>
            <strong class="title"><%= doc.title %></strong>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
