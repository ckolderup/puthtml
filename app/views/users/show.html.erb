<% if @user.posts.size > 0 %>
  <h2>Latest documents by <%= @user.name %></h2>

  <ul id="documents">
    <% @user.posts.each do |doc| %>
      <li>
        <a href="<%= doc.path %>">
          <strong><%= doc.title %></strong>
          <em><%= doc.user.name %></em>
        </a>
      </li>
    <% end %>
  </ul>
<% end %>
